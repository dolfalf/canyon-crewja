<h1>Listing Bill Head Infos</h1>

<table>
  <thead>
    <tr>
      <th>Payment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bill_head_infos.each do |bill_head_info| %>
      <tr>
        <td><%= bill_head_info.payment %></td>
        <td><%= link_to 'Show', bill_head_info %></td>
        <td><%= link_to 'Edit', edit_bill_head_info_path(bill_head_info) %></td>
        <td><%= link_to 'Destroy', bill_head_info, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

