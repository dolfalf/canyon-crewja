<%- model_class = StudentInfo -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:branch_id) %>:</strong></dt>
  <dd><%= @student_info.branch_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:child_id) %>:</strong></dt>
  <dd><%= @student_info.child_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:student_name) %>:</strong></dt>
  <dd><%= @student_info.student_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:student_kana) %>:</strong></dt>
  <dd><%= @student_info.student_kana %></dd>
  <dt><strong><%= model_class.human_attribute_name(:gender) %>:</strong></dt>
  <dd><%= @student_info.gender %></dd>
  <dt><strong><%= model_class.human_attribute_name(:birthday) %>:</strong></dt>
  <dd><%= @student_info.birthday %></dd>
  <dt><strong><%= model_class.human_attribute_name(:application_age_yearmonth) %>:</strong></dt>
  <dd><%= @student_info.application_age_yearmonth %></dd>
  <dt><strong><%= model_class.human_attribute_name(:inquery_id) %>:</strong></dt>
  <dd><%= @student_info.inquery_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              student_infos_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_student_info_path(@student_info), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              student_info_path(@student_info),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
