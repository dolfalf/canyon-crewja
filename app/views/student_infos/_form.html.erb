<%= simple_form_for @student_info, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :branch_id %>
  <%= error_span(@student_info[:branch_id]) %>
  <%= f.input :child_id %>
  <%= error_span(@student_info[:child_id]) %>
  <%= f.input :student_name %>
  <%= error_span(@student_info[:student_name]) %>
  <%= f.input :student_kana %>
  <%= error_span(@student_info[:student_kana]) %>
  <%= f.input :gender %>
  <%= error_span(@student_info[:gender]) %>
  <%= f.input :birthday %>
  <%= error_span(@student_info[:birthday]) %>
  <%= f.input :application_age_yearmonth %>
  <%= error_span(@student_info[:application_age_yearmonth]) %>
  <%= f.input :inquery_id %>
  <%= error_span(@student_info[:inquery_id]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                student_infos_path, :class => 'btn btn-default' %>
<% end %>
