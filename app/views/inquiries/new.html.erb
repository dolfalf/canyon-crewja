    <%= f.check_box :course_4,{'name'=>'inquiry[course][]'},'3' %>障害コース
    <%= f.check_box :course_5,{'name'=>'inquiry[course][]'},'4' %>音楽コース
    <%= f.check_box :course_6,{'name'=>'inquiry[course][]'},'5' %>胎教コース
    <%= f.check_box :course_7,{'name'=>'inquiry[course][]'},'6' %>その他コース
