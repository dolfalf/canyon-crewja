  </div>
  <div class="field">
    <%= f.label :"最寄り駅" %><br>
    <%= f.text_field :station %>
  </div>
  <div class="field">
    <%= f.label :"支払い" %><br />
    <%= f.radio_button :payment, 1 %> 郵便局自動払込
    <%= f.radio_button :payment, 2 %> 銀行振込
  </div>
  <div class="field">
    <%= f.label :"郵便局口座の記号" %><br>
    <%= f.text_field :pay_account_mark %>
  </div>
  <div class="field">
