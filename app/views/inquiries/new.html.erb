    <%= f.text_field :pay_account_numner %>
  </div>
  <div class="field">
    <%= f.label :"支払い名" %><br>
    <%= f.text_field :pay_owner %>
  </div>
  <div class="field">
    <%= f.check_box :course_1,{'name'=>'inquiry[course][]'},'0' %>幼児コース
    <%= f.check_box :course_2,{'name'=>'inquiry[course][]'},'1' %>ジュニアスコース
